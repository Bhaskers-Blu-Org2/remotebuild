<?xml version="1.0"?>
<LS_SETTINGS_FILE>
    <LS_SETTINGS_DESCRIPTION>
        <![CDATA[]]>
    </LS_SETTINGS_DESCRIPTION>
    <optionSet id="LSOptions">
        <optionSet id="Defaults" displayName="Options Defaults">
            <optionSet id="Espresso" displayName="Espresso"/>
            <optionSet id="Parsers" displayName="Parsers"/>
        </optionSet>
        <optionSet id="User" displayName="User Overrides">
            <optionSet id="Espresso" displayName="Espresso" />
            <optionSet id="Parsers" displayName="Parsers"/>
        </optionSet>
        <optionSet id="Project" displayName="Project Overrides">
            <optionSet id="Espresso" displayName="Espresso">
		<optionSet id="TranslationPlatform" displayName="Translation Platform" helpText="Settings for the Translation Platform">
			<optionSet id="Localization Verification (LocVer) Settings" displayName="Localization Verification (LocVer) Settings" helpText="Use these settings to control how Localization Verification (LocVer) is handled.">            
						<optionSet id="Message Settings" displayName="Message Settings" helpText="Settings for messages reported by LocVer.">
							<option id="\LocVer\Messages\Report messages as" displayName="Message Severity" helpText="The severity of all messages will be changed to the value specified in this setting. This setting overrides the settings 'Error Messages', 'Warning Messages', 'Informational Messages' and 'Ignore Messages' unless the value is 'Default'.">
								<pick defaultValue="0" currentValue="2">
									<defaultList>
										<item string="Default" itemID="0"/>
										<item string="Error" itemID="1"/>
										<item string="Warning" itemID="2"/>
										<item string="Info" itemID="3"/>
									</defaultList>
									<currentList>
										<item string="Default" itemID="0"/>
										<item string="Error" itemID="1"/>
										<item string="Warning" itemID="2"/>
										<item string="Info" itemID="3"/>
									</currentList>
								</pick>
							</option>
						</optionSet>					
				<optionSet id="Logging Settings" displayName="Logging Settings" helpText="Use these settings to set logging options when running LocVer extension.">
					<option id="\TPLocVer\Logging\IncludeItem" displayName="Include Item Information" helpText="If set to 'On', includes Resource Id, Source, Target and Instructions in LocVer XML report for items with notes, warnings and errors.">
						<boolean defaultValue="0" currentValue="1"/>
					</option>
				</optionSet>
			</optionSet>
		</optionSet>
                <optionSet id="LSBuildOptions" displayName="LSBuild Extensions" helpText="LSBuild Extensions">
                    <optionSet id="Parse" displayName="Parse" helpText="Parse command options.">
                        <option id="\LSBuildOptions\Parse\Before" displayName="Before" helpText="Ordered list of extensions that can be run before the command.">
                            <stringList>
                                <defaultList/>
                                <currentList/>                                    
                            </stringList>
                        </option>
                        <option id="\LSBuildOptions\Parse\After" displayName="After" helpText="Ordered list of extensions that can be run after the command.">
                            <stringList>
                                <defaultList/>
                                <currentList />
                            </stringList>
                        </option>
                    </optionSet>
                    <optionSet id="Generate" displayName="Generate" helpText="Generate command options.">
                        <option id="\LSBuildOptions\Generate\Before" displayName="Before" helpText="Ordered list of extensions that can be run before the command.">
                            <stringList>
                                <defaultList/>
                                <currentList />
                            </stringList>
                        </option>
                        <option id="\LSBuildOptions\Generate\After" displayName="After" helpText="Ordered list of extensions that can be run after the command.">
                            <stringList>
                                <defaultList/>
                                <currentList>
                                    <item string="Verify Localization Rules" itemID="0"/>
                                </currentList>
                            </stringList>
                        </option>
                    </optionSet>
                </optionSet>
            </optionSet>
            <optionSet id="Parsers" displayName="Parsers"/>
        </optionSet>
    </optionSet>
</LS_SETTINGS_FILE>
